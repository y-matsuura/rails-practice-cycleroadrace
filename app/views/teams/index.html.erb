<div class="d-flex align-items-center">
  <h1>チーム一覧</h1>
  <div class="ml-auto teams__linkBox">
    <a href="/teams/new" class="btn btn-outline-dark">新規作成</a>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>

<table class="table table-hover teams__table">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th>名前</th>
      <th>カテゴリ</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= image_tag "/assets/logo/#{team.logo.image_name}" %></td>
        <td><%= team.name %></td>
        <td><%= team.category.name %></td>
        <td><%= team.created_at.to_s(:datetime_jp) %></td>
        <td><%= team.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to '詳細', team, class: 'btn btn-outline-dark' %></td>
        <td><%= link_to '削除', team, class: 'btn btn-outline-dark', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
