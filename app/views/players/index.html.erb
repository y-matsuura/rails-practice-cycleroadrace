<div class="d-flex align-items-center">
  <h1>プレイヤー一覧</h1>
  <div class="ml-auto players__linkBox">
    <a href="/players/new" class="btn btn-outline-dark">新規作成</a>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>

<table class="table table-hover players__table">
  <thead class="thead-dark">
    <tr>
      <th>名前</th>
      <th>所属チーム</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.team != nil ? player.team.name : '所属なし' %></td>
        <td><%= player.created_at.to_s(:datetime_jp) %></td>
        <td><%= player.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to '詳細', player, class: 'btn btn-outline-dark' %></td>
        <td><%= link_to '削除', player, class: 'btn btn-outline-dark', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
